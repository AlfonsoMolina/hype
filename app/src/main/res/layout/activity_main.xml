<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/popcorn_baw_small"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="@string/logo_des"
        android:alpha="0.2"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:backgroundTint="?attr/colorPrimary"
        >
        <TextView
            android:id="@+id/section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:fontFamily="sans-serif-medium"
            android:textSize="20sp"
            />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="visible"
        android:id="@+id/navigation"
        android:background="@color/colorPrimary"
        android:layout_below="@+id/my_toolbar"
        android:layout_margin="0dp"
        android:padding="0dp"
        android:elevation="4dp"
        android:layout_alignParentStart="true"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            >
            <ImageButton
                android:id="@+id/hype"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.166"
                android:onClick="showHypeSection"
                android:src="@drawable/ic_favorite_black_24dp"
                android:tint="@color/colorNonSelectedButton"
                android:background="@null"
                style="@style/Widget.AppCompat.Button.Borderless"/>
            <ImageButton
                android:id="@+id/theaters"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.166"
                android:src="@drawable/ic_theaters_black_24dp"
                android:tint="@color/colorSelectedButton"
                android:onClick="showTheatersSection"
                android:background="@null"
                style="@style/Widget.AppCompat.Button.Borderless"/>
            <ImageButton
                android:id="@+id/releases"
                android:layout_width="0dp"
                android:layout_weight="0.166"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_today_black_24dp"
                android:tint="@color/colorNonSelectedButton"
                android:onClick="showReleasesSection"
                android:background="@null"
                style="@style/Widget.AppCompat.Button.Borderless"/>

        </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/content"
        android:orientation="vertical"
        android:layout_below="@id/navigation"
        android:layout_above="@+id/load_bar">


        <TextView
            android:id="@+id/noMoviesMsg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:text="@string/reading_msg"
            android:textAlignment="center"
            android:textSize="16sp"
            android:padding="20dp"
            android:textColor="@color/colorAccent"
            android:fontFamily="sans-serif-condensed"
            />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/movieList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp"
            android:paddingBottom="0dp"
            android:clipToPadding="false"
            android:backgroundTint="@color/colorPrimary"
            android:layoutAnimation="@anim/fill_movie_list"
            />

    </LinearLayout>
    <FrameLayout
        android:id="@+id/movie_detail_container"
        android:elevation="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:visibility="gone"
        >
    </FrameLayout>


        <LinearLayout
            android:id="@+id/load_bar"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:orientation="horizontal"
            android:baselineAligned="false"
            android:layout_alignParentBottom="true"
            android:animateLayoutChanges="true"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWindowBackground"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWindowBackground"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWindowBackground"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWindowBackground"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWindowBackground"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWindowBackground"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWindowBackground"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWindowBackground"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWindowBackground"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/colorWindowBackground"/>
        </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/pager"
        android:paddingEnd="20dp"
        android:paddingStart="20dp"
        android:paddingBottom="10dp"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/previousPageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:text="@string/previous_button"
            android:contentDescription="@string/previous_button"
            android:onClick="turnBackPage"
            android:src="@drawable/ic_navigate_before_black_24dp"
            android:tint="#000000"
            android:background="@drawable/circle_shape"
            android:backgroundTint="?attr/colorAccent"
            android:alpha="0.2"
            />

        <TextView
            android:id="@+id/currentPage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:gravity="center"
            android:textAlignment="gravity"
            android:layout_gravity="bottom|center_horizontal"
            android:fontFamily="sans-serif-regular"
            android:textSize="14sp"
            android:textColor="@color/colorAppText"
            android:text="@string/current_page_number"
            android:visibility="gone"
            android:background="@drawable/circle_shape"
            android:backgroundTint="@color/colorPrimary"
            />

        <ImageButton
            android:id="@+id/nextPageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="@string/next_button"
            android:contentDescription="@string/next_button"
            android:src="@drawable/ic_navigate_next_black_24dp"
            android:onClick="turnPage"
            android:tint="#000000"
            android:background="@drawable/circle_shape"
            android:backgroundTint="?attr/colorAccent"
            />
    </FrameLayout>

</RelativeLayout>
